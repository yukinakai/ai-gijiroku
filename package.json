{
  "name": "ai-gijiroku",
  "version": "1.0.0",
  "description": "AI議事録作成ツール",
  "main": "dist/main/index.js",
  "engines": {
    "node": ">=20.0.0"
  },
  "scripts": {
    "start": "npm run build && cross-env NODE_ENV=production electron .",
    "dev": "cross-env NODE_ENV=development concurrently \"npm run watch\" \"npm run electron-dev\"",
    "electron-dev": "wait-on dist/main/index.js && electron .",
    "build": "tsc && npm run copy-files",
    "watch": "concurrently \"tsc -w\" \"npm run watch-copy\"",
    "watch-copy": "nodemon --watch src/renderer --ext html --exec \"npm run copy-files\"",
    "copy-files": "mkdir -p dist/renderer && cp src/renderer/index.html dist/renderer/",
    "lint": "eslint src --ext .ts",
    "test": "jest",
    "pack": "electron-builder --dir",
    "dist": "electron-builder",
    "clean": "rimraf dist"
  },
  "build": {
    "appId": "com.ai-gijiroku",
    "mac": {
      "category": "public.app-category.productivity",
      "target": [
        "dmg",
        "zip"
      ]
    },
    "win": {
      "target": [
        "nsis",
        "portable"
      ]
    },
    "files": [
      "dist/**/*",
      "node_modules/**/*"
    ],
    "directories": {
      "output": "release"
    }
  },
  "keywords": [
    "meeting",
    "transcription",
    "whisper",
    "electron"
  ],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "dotenv": "^16.0.3",
    "node-audiorecorder": "^3.0.0",
    "openai": "^4.24.1"
  },
  "devDependencies": {
    "@types/jest": "^29.5.11",
    "@types/node": "^20.10.6",
    "@typescript-eslint/eslint-plugin": "^6.17.0",
    "@typescript-eslint/parser": "^6.17.0",
    "concurrently": "^8.2.2",
    "cross-env": "^7.0.3",
    "electron": "^28.1.0",
    "electron-builder": "^24.9.1",
    "eslint": "^8.56.0",
    "jest": "^29.7.0",
    "nodemon": "^3.0.2",
    "prettier": "^3.1.1",
    "rimraf": "^5.0.5",
    "ts-jest": "^29.1.1",
    "typescript": "^5.3.3",
    "wait-on": "^7.2.0"
  }
}
